<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/public.css">

<style>
</style>

<script>
    function proc1(a){
        var x = document.querySelector('#x');
        var y = document.querySelector('#y');
       
        x = parseInt(x.value);
        y = parseInt(y.value);
        
        switch(a){
            case "+" :
                k = sum(); 
                break;
            case "-" :
            	k = sub();
                break;
            case "*" :
            	k = multi();
                break;
            case "/" :
            	k = divide();
                break;
        }
        
        //출력
        result = document.querySelector('#result1');
        result.innerHTML = k;
    }
    
    function sum(){
        var res = x + y;
        return res;
    }
    function sub(){
        var res = x - y;
        return res;
    }
    function multi(){
        var res = x * y;
        return res;
    }
    function divide(){
        var res = x / y;
        return res;
    }
</script>
</head>
<body>

<div class="box">
    
    <br><br>
    입력 1<input type="text" id="x"><br>
    입력 2<input type="text" id="y"><br>
    <br>
    <input type="button" value="+" onclick="proc1('+')">
    <input type="button" value="-" onclick="proc1('-')">
    <input type="button" value="*" onclick="proc1('*')">
    <input type="button" value="/" onclick="proc1('/')">
    <!-- onclick안에 바깥이 ""이면 안에는 '', 바깥이 ''이면 안은 " "-->
    
    <div id="result1"></div>
</div>
</body>
</html>