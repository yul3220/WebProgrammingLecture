<script>
    var Circle={
        //속성
        radius : 3,
        //메소드
        getArea : function(){
        	area = this.radius * this.radius * Math.PI;
        	return area;
        },
        getCircum : function(){
        	circum = 2 * Math.PI * this.radius;
        	retrun circum;
        }
    };
    
    function print(out){
        str = `반지름 : ${Circle.radius} <br>`;
        str += `면적 : ${Circle.getArea()} <br>`;
        str += `둘레 : ${Circle.getCircum()} <br>`;
        
        result = document.querySelector(out);
        result.innerHTML = str;
    }
    
    function proc1(){
        print('#result1');
    }
    
    function proc2(){
        Circle.radius = prompt("반지름을 입력하세요.");
        
        print('#result2');
    }
    
</script>
