			$("#names").on("click", "p", function() {
				idvalue = $(this).attr("id");
				$.ajax({
					url: "buyerDetails.jsp",
					type: "post",
					data: {"id": idvalue},
					success: function(res) {
						$("#details").html(res);
					},
					error: function(xhr) {
						alert("상태 : " + xhr.status);
