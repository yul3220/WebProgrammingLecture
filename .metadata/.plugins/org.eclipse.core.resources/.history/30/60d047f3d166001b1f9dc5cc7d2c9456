<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/public.css"/>
<script src="../js/jquery-3.5.1.min.js"></script>
<style>
.table{
	width : 500px;
}
.tb{
	border : 1px solid black;
}
.tb td:last-child{
	width : 300px;
}
</style>
<script>
	$(function(){
		// lprod테이블의 데이터 조회
		$("input").on("click", function(){
			$.ajax({
				url : "../2021-02-03/lprod.jsp",
				//type:"get"(type이 get일때는 생략이 가능하면 post일 경우는 작성해야한다.)과 data: " " 생략
				//type대신 method작성 가능
				success : function(res){
					code = "";
					$.each(res, function(i,v){
						code += `<option value='${v.gu}'>${v.nm}</option>`;
					})
					$("#lprod").html(code);
				},
				error : function(xhr){
					alert("상태 : " + xhr.status)
				},
				dataType : "json"
			})//ajax끝
			
			// lprod에서 하나를 선택하면 change이벤트
			// option으 value값을 가져온다. => val()
			// queryForList를 수행
			$("#lprod").on("change", function(){
				//$("#lprod option")으로 작성하면 모든 option선택
				//=> 2021-01-22 컨텍스트에서 예제 했음
				//:사이는 띄어쓰기 존재하면 안됨
				//$("option:selected",this)=> this는 ""안에 들어있으면 안됨 
				lprod_gu = $("#lprod option:selected").val();
				
				$.ajax({
					url:"prodName.jsp",
					type : "post",
					data : {"gu" : lprod_gu},
					dataType : "json",
					error : function(xhr){
						alert("상태 : " + xhr.status); //200, 404, 500
						//200에러 : json의 ,나 주석처리나 [, {, ""등이 제대로 안되어있을때 남
					},
					success : function(res){
					
						code = "";
						$.each(res, function(i, v){
							code += "<option value='"+ v.id + "'>"+v.name+"</option>";
						})
						
						$("#prod").html(code);
					}
				})//#lprod function ajax끝
			})//lprod change끝
			
			// prod를 change하면 해당 제품의 detail을 출력한다.
			// 선택한 option의 value값을 가져온다. - val()
			// queryForObject를 수행
			$("#prod").on("change", function(){
				prod_id = $("option:selected",this).val();
			
				$.ajax({
					url : "prodDetail.jsp",
					type : "post",
					data : {"id": prod_id},
					success : function(res){
						$("#detail").html(res);
					},
					error : function(xhr){
						alert("상태 : " + xhr.status);
					},
					dataType : "html"
				})
			})//prod change끝
		})//input click끝
	})//function끝
</script>
</head>
<body>
	<div class="box">
    	
    	<br><br>
    	<input type="button" value="확인"/>

    	<div id="result1">
    		<table border="1" class="table">
    			<tr>
    				<td>
    					<select id="lprod">
    						<!--  <option value="lprod_gu">lprod_nm</option> value값 가져가는 것 : val()-->
    					</select>
    				</td>
    				<td>
    					<select id="prod">
    						<!--<option value="P101000001">모니터 삼성전자15인치칼라</option>-->
    					</select>
    				</td>
    			</tr>
    			
    			<tr>
    				<td id="detail" colspan="2"></td>
    			</tr>
    		</table>
    	</div>
	</div>
</body>
</html>