	//함수정의
	function change(){
		//html요소로 접근하기
		vcol = document.getElementById('col');
		
		//접근요소에서 값 가져오기
		var : vvalue = vcol.value;
		
		//가져온 값으로  pre요소의 배경색을 바꿀려고 한다.
		vpre = document.getElementById('pr1');
		vpre.style.backgroundColor
	}
</script>
