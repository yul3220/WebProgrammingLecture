   function func() {
      //html 요소 접근
      a = document.getElementById('test');
      b = document.querySelector('#p1');
      
      //요소에 style적용
      a.style.color = 'red';
      a.style.backgroundColor = 'yellow';
      
      b.style.fontSize = '1.5em';
   }
</script>
