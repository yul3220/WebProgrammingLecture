<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" href="../css/public.css" />
<script src="../js/jquery-3.5.1.min.js"></script>
<style>
	input[type=image]{
		width : 50px;
		height: 50px;
	}
</style>
<script>
	$(function() {
		//$(".box1 input:button")
		$(".box1 input[type=button]").on("click", function(){
			//input  요소 테두리 lime , 배경색  핑크
			$("#result1 input").css({"border":"2px solid lime",
						   	"background":"pink"
						   })
			
			//input type이 button 인 요소 배경색 노란
			$("#result1 input:button").css("background", "yellow");
			
			//Button  요소와 input type이 button 인 요소 배경색 하늘색
			$("#result1 :button").css("background", "cyan");
			
			//Type이 submit 요소의 배경색 녹색
			//$("#result1 input[type=submit], #result1 button[type=submit]")
			$("#result1 :submit").css("background", "green").css("border", "2px solid red");
			
			//Type이 reset인 요소의 배경색 노랑 
			//$("#result1 input[type=reset], #result1 button[type=reset]")
			$("#result1 :reset").css("background", "yellow");
			
			//Type이 text, password 인 요소의 테두리 파랑
			//$("#result1 input[type=text], #result1 input[type=password]")
			$("#result1 :text, #result1 :password").css("border", "2px dotted blue");
			
			//Type이 file, image인요소의 테두리 빨강
			//$("#result1 input[type=file], #result1 input[type=image]")
			$("#result1 :file,	#result1 :image").css("border", "5px solid red");
		})
	})
</script>
</head>

<body>
	<div class="box box1">
		<br><br>
		<input type="button" value="확인"/>
		<div id="result1">
			<form action="form.jsp" method="post">
				Text : <input type="text" name="txt" /><br>
				
				Password : <input type="password" name="pass"/><br><br>
				
				Radio : <input type="radio" name="radioGroup" id="radioA" value="A" /> A
				<input type="radio" name="radioGroup" id="radioB" value="B"/> B<br><br>
				
				Checkbox : <input type="checkbox" name="checkboxes" id="checkbox1" value="1" /> 1
				<input type="checkbox" name="checkboxes" id="checkbox2" value="2"/> 2<br><br>
				
				Textarea : <br> <textarea rows="15" cols="50" id="myTextarea"></textarea><br><br>
				
				Image : <input type="image" src="../images/sw_on.png"><br><br>
				
				File : <input type="file"><br><br>
				
				Buttons : <button type="button" id="normalButton">Normal</button>
				
				<button type="submit" id="submitButton">Submit</button>
				<button type="reset" id="resetButton">Reset</button> 
				<button>전송</button>
				<br><br>
				
				<input type="button" value="일반버튼">
				<input type="submit" value="전송버튼">
				<input type="reset" value="초기화버튼"> 
				<!--input은 타입을 안쓰면 text이고, button은 submit이다.-->
				<br><br>
			</form>
		</div>
	</div>
</body>

