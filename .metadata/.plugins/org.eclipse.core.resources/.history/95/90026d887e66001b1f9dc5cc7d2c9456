<script>
	$(function(){
		$("input:button").on("click", function(){
			$.ajax({
				url : "buyerNames.jsp",
				type : "get",
				success : function(res){
					code = "";
					$.each(res, function(i,v){
						code += "<p id='"+ v.id +"'>" + v.name + "</p>"
					})
					
					$("#names").html(code);
				},
				error : function(){
					alert("상태 : " + xhr.status);
				},
				dataType : "json"
			})
		})
		
		//bind : 실행 전에 만들어져있던 요소에 이벤트를 주는것
		//delegate : 실행 이후에 생긴 요소에 이벤트를 주는 것
		
	})
</script>
